{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th scope="col">Actions</th> <!-- 삭제 버튼을 추가한 열 -->
    </tr>
    </thead>
    <tbody>
    {{#article}}
    <tr>
        <th>{{id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
        <td>
            <a href="/articles/{{id}}/edit" class="btn btn-primary">Edit</a> <!-- 게시물별로 수정 버튼 -->
            <a href="/articles/{{id}}/delete" class="btn btn-danger">Delete</a> <!-- 게시물별로 삭제 버튼 -->
        </td>
    </tr>
    {{/article}}
    </tbody>
</table>

<a href="/articles">Go to Article List</a>

{{>comments/_comments}}
{{>layouts/footer}}
